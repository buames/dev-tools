{
  "private": true,
  "name": "dev-tools",
  "description": "dev-tools",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prune": "rm -rf ./{,*/,**/*/}{node_modules,coverage,*.log,*.tsbuildinfo,dist,dts}",
    "clean": "packemon clean",
    "build": "yarn clean && packemon build --declaration=standard",
    "pack": "NODE_ENV=production packemon pack --declaration=standard",
    "changeset": "changeset",
    "eslint": "eslint . --ext .js,.ts --max-warnings=0",
    "prettier": "prettier \"**/*.{js,ts,md,json}\" --write",
    "lint-staged": "lint-staged",
    "types": "tsc --build",
    "version": "changeset version",
    "release": "yarn build && changeset publish"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "**/*.{ts,js}": [
      "yarn run eslint --fix"
    ],
    "*.{js,ts,md,json}": [
      "yarn run prettier"
    ]
  },
  "prettier": "@buames/prettier-config",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@buames/eslint-config",
      "@buames/eslint-config/node"
    ]
  },
  "dependencies": {
    "@changesets/cli": "2.16.0",
    "eslint": "7.28.0",
    "jest": "27.0.4",
    "lint-staged": "11.0.0",
    "packemon": "0.16.6",
    "pre-commit": "1.2.2",
    "prettier": "2.3.1",
    "ts-jest": "27.0.3",
    "typescript": "4.3.2"
  },
  "author": "buames",
  "bugs": "https://github.com/buames/dev-tools/issues",
  "homepage": "https://github.com/buames/dev-tools#README.md",
  "repository": {
    "type": "git",
    "url": "git@github.com:buames/dev-tools.git"
  },
  "license": "MIT"
}
